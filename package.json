{
  "name": "orama-schema-resolver",
  "version": "0.3.0",
  "description": "Create your Orama's schema following the official specification",
  "types": "./dist/cjs/index.d.ts",
  "homepage": "https://github.com/mateonunez/orama-schema-resolver#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mateonunez/orama-schema-resolver.git"
  },
  "bugs": {
    "url": "https://github.com/mateonunez/orama-schema-resolver/issues"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/cjs/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "browser": "./dist/client/index.js"
    }
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.{ts,js}\" --ignore-path .gitignore",
    "lint": "npm run format && eslint . --ext .js,.ts --ignore-path .gitignore",
    "test:unit": "npm run lint && c8 -c ./test/config/c8.json tap --rcfile=./test/config/tap.yml ./test/**/*.test.ts",
    "test:typescript": "npm run build:cjs ; tsd --files ./test/types/**/*test-d.ts --",
    "test": "npm run test:unit ; npm run test:typescript",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:browser": "esbuild --bundle --sourcemap --target=es2019 --format=esm --outfile=./dist/client/index.js ./src/index.ts",
    "build": "rimraf ./dist && npm run build:esm && npm run build:cjs && npm run build:browser",
    "prepare": "husky install",
    "benchmark": "npm run build ; node --no-warnings ./benchmark/orama-schema-resolver.mjs"
  },
  "keywords": [
    "orama",
    "schema-resolver",
    "full-text search",
    "supercharged",
    "database"
  ],
  "author": {
    "email": "mateonunez95@gmail.com",
    "name": "Mateo Nunez",
    "url": "https://github.com/mateonunez"
  },
  "license": "MIT",
  "dependencies": {
    "@orama/orama": "2.0.0-beta.3"
  },
  "devDependencies": {
    "@types/node": "^20.8.9",
    "@types/tap": "^15.0.10",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "c8": "^8.0.1",
    "cronometro": "^1.2.0",
    "esbuild": "^0.19.5",
    "eslint": "^8.52.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "tap": "^16.3.9",
    "ts-node": "^10.9.1",
    "tsd": "^0.29.0",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
