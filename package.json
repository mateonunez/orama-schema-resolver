{
  "name": "lyra-schema-resolver",
  "version": "0.2.0",
  "description": "Create your Lyra's schema following the official specification",
  "types": "./dist/cjs/index.d.ts",
  "homepage": "https://github.com/mateonunez/lyra-schema-resolver#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mateonunez/lyra-schema-resolver.git"
  },
  "bugs": {
    "url": "https://github.com/mateonunez/lyra-schema-resolver/issues"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/cjs/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "browser": "./dist/client/index.js"
    }
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.{ts,js}\" --ignore-path .gitignore",
    "lint": "npm run format && eslint . --ext .js,.ts --ignore-path .gitignore",
    "test:unit": "npm run lint && c8 -c ./test/config/c8.json tap --rcfile=./test/config/tap.yml ./test/**/*.test.ts",
    "test:typescript": "npm run build:cjs ; tsd --files ./test/types/**/*test-d.ts --",
    "test": "npm run test:unit ; npm run test:typescript",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:browser": "esbuild --bundle --sourcemap --target=es2019 --format=esm --outfile=./dist/client/index.js ./src/index.ts",
    "build": "rimraf ./dist && npm run build:esm && npm run build:cjs && npm run build:browser",
    "prepare": "husky install",
    "benchmark": "npm run build ; node --no-warnings ./benchmark/lyra-schema-resolver.mjs"
  },
  "keywords": [
    "lyra",
    "schema-resolver",
    "full-text search",
    "supercharged",
    "database"
  ],
  "author": {
    "email": "mateonunez95@gmail.com",
    "name": "Mateo Nunez",
    "url": "https://github.com/mateonunez"
  },
  "license": "MIT",
  "dependencies": {
    "@lyrasearch/lyra": "^0.4.9"
  },
  "devDependencies": {
    "@types/node": "^18.13.0",
    "@types/tap": "^15.0.8",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "c8": "^7.13.0",
    "cronometro": "^1.1.5",
    "esbuild": "^0.17.8",
    "eslint": "^8.34.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "tap": "^16.3.4",
    "ts-node": "^10.9.1",
    "tsd": "^0.25.0",
    "typescript": "^4.9.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
